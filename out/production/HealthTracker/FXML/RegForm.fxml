<GridPane alignment="center" hgap="10" prefHeight="797.0" prefWidth="395.0" vgap="10" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.RegFormController">
    <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
    </columnConstraints>

    <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
