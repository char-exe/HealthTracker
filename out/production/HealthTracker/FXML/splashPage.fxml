<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>



  <!-- VBox is used to stack 3 HBoxes on top of each other. This means that the 3 elements are evenly spaced out
  and allows for a neater display -->
  <VBox alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.SplashPageController">
      <children>

          <!-- ProActive Banner -->
          <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
              <children>
                  <Label text="ProActive">
                      <font>
                          <Font size="36.0" />
                      </font>
                  </Label>
              </children>
          </HBox>

          <!-- Log In button -->
          <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
              <children>
                  <Button fx:id="logInNavigateButton" mnemonicParsing="false" onAction="#logInPage" text="Log In">
                      <font>
                          <Font size="24.0" />
                      </font>
                  </Button>
              </children>
          </HBox>

          <!-- Sign Up Button -->
          <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
              <children>
                  <Button fx:id="signUpNavigateButton" mnemonicParsing="false" onAction="#signUpPage" text="Sign Up">
                      <font>
                          <Font size="24.0" />
                      </font>
                  </Button>
              </children>
          </HBox>

      </children>
  </VBox>
