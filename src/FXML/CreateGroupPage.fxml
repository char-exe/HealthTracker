<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" styleClass="base" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CreateGroupController">
   <children>
      <HBox alignment="CENTER" prefHeight="75.0" prefWidth="600.0">
         <children>
            <ImageView fx:id="logo" fitHeight="50.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Resources/proactive.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="54.0" prefWidth="600.0">
         <children>
            <Label text="Enter your group's name: " />
            <TextField fx:id="groupNameField" />
         </children>
      </HBox>
      <Label fx:id="errorLabel" textFill="RED" />
      <HBox alignment="CENTER" prefHeight="63.0" prefWidth="600.0">
         <children>
            <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#createGroup" text="Create group" />
         </children>
      </HBox>
   </children>
</VBox>
