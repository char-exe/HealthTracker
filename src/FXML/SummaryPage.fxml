<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20.0" styleClass="base" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.SummaryController">
   <children>
      <Label fx:id="welcomeBackLabel" text="Welcome back *user*!">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <HBox alignment="CENTER">
         <children>
            <Label text="Here's your activity summary over the last 7 days">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="35.0" layoutY="155.0">
         <children>
            <LineChart fx:id="weightChart" legendVisible="false" maxWidth="900.0" title="Weight" HBox.hgrow="ALWAYS">
               <xAxis>
                  <NumberAxis fx:id="weightDateAxis" autoRanging="false" label="Date" minorTickCount="0" minorTickVisible="false" side="BOTTOM" tickLabelRotation="45.0" tickUnit="1.0" upperBound="8.0" />
               </xAxis>
               <yAxis>
                  <NumberAxis label="Weight (kg)" side="LEFT" />
               </yAxis>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </LineChart>
         </children>
      </HBox>
      <Separator layoutX="35.0" layoutY="995.0" />
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <LineChart fx:id="intakeChart" legendVisible="false" maxWidth="900.0" title="Calorie Intake" HBox.hgrow="ALWAYS">
              <xAxis>
                <NumberAxis fx:id="intakeDateAxis" autoRanging="false" label="Date" minorTickCount="0" minorTickVisible="false" side="BOTTOM" tickLabelRotation="45.0" tickUnit="1.0" upperBound="8.0" />
              </xAxis>
              <yAxis>
                <NumberAxis label="Calorie Intake" side="LEFT" />
              </yAxis>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </LineChart>
         </children>
      </HBox>
      <Separator />
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <LineChart fx:id="burnChart" legendVisible="false" maxWidth="900.0" title="Calorie Burn" HBox.hgrow="ALWAYS">
              <xAxis>
                <NumberAxis fx:id="burnDateAxis" autoRanging="false" label="Date" minorTickVisible="false" side="BOTTOM" tickLabelRotation="45.0" tickUnit="1.0" upperBound="8.0" />
              </xAxis>
              <yAxis>
                <NumberAxis label="Calories Burned" side="LEFT" />
              </yAxis>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </LineChart>
         </children>
      </HBox>
      <Separator />
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <LineChart fx:id="spentChart" legendVisible="false" maxWidth="900.0" title="Minutes Spent Exercising" HBox.hgrow="ALWAYS">
               <xAxis>
                  <NumberAxis fx:id="spentDateAxis" autoRanging="false" label="Date" minorTickVisible="false" tickLabelRotation="45.0" tickUnit="1.0" upperBound="8.0" />
               </xAxis>
               <yAxis>
                  <NumberAxis label="Minutes" side="LEFT" />
               </yAxis>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </LineChart>
         </children>
      </HBox>
      <Separator />
   </children>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
</VBox>
