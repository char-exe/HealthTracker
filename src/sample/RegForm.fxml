<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>


<GridPane alignment="center" hgap="10" vgap="10"
          xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/11.0.1"
          fx:controller="RegForm.Controller">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Text fx:id="firstNamePopUp"
              GridPane.columnIndex="0" GridPane.rowIndex="1"
              GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
        <Text
              GridPane.columnIndex="0" GridPane.rowIndex="3"
              GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
        <Text
              GridPane.columnIndex="0" GridPane.rowIndex="5"
              GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
        <Text
                GridPane.columnIndex="0" GridPane.rowIndex="7"
                GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
        <Text
                GridPane.columnIndex="0" GridPane.rowIndex="9"
                GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
        <Text
                GridPane.columnIndex="0" GridPane.rowIndex="11"
                GridPane.columnSpan="2" GridPane.halignment="CENTER"/>


        <Text text="Sign up to ProActive"
              GridPane.columnIndex="0" GridPane.rowIndex="0"
              GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

        <Label text="First Name:"
               GridPane.columnIndex="0" GridPane.rowIndex="2"/>

        <TextField fx:id="firstNameField"
                GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Last Name:"
               GridPane.columnIndex="0" GridPane.rowIndex="4"/>

        <TextField fx:id="lastNameField"
                GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Email:"
                GridPane.columnIndex="0" GridPane.rowIndex="6"/>

        <TextField fx:id="emailField"
                GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="Desired Username:"
               GridPane.columnIndex="0" GridPane.rowIndex="8"/>

        <TextField fx:id="usernameField"
                GridPane.columnIndex="1" GridPane.rowIndex="8"/>

        <Label text="Password:"
               GridPane.columnIndex="0" GridPane.rowIndex="10"/>

        <PasswordField fx:id="passwordField"
                       GridPane.columnIndex="1" GridPane.rowIndex="10"/>

        <Label text="Repeat Password:"
               GridPane.columnIndex="0" GridPane.rowIndex="12"/>

        <PasswordField fx:id="repeatPasswordField"
                       GridPane.columnIndex="1" GridPane.rowIndex="12"/>
        <Button text="Submit"
                GridPane.rowIndex="15" GridPane.columnIndex="0"
                GridPane.columnSpan="2" GridPane.halignment="CENTER"
                onAction="#handleSubmitButtonAction"/>
    </children>
</GridPane>

